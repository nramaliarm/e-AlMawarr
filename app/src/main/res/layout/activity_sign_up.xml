<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Tombol Kembali -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrow"
        android:contentDescription="Kembali"
        android:padding="8dp"/>

    <!-- Logo -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:contentDescription="Logo Sekolah"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <!-- Judul -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"
        android:layout_gravity="start"/>

    <!-- Wrapper Input Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <!-- Ikon Email -->
        <ImageView
            android:id="@+id/iconEmail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arroba"
            android:contentDescription="Ikon Email"
            android:layout_marginStart="10dp"
            android:tint="@color/black"/>

        <!-- Input Email -->
        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Email/No Telepon"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/gray"/>
    </LinearLayout>

    <!-- Wrapper Input Nama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <!-- Ikon Nama -->
        <ImageView
            android:id="@+id/iconNama"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/user"
            android:contentDescription="Ikon Nama"
            android:layout_marginStart="10dp"
            android:tint="@color/black"/>

        <!-- Input Nama -->
        <EditText
            android:id="@+id/inputNama"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Nama Lengkap"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="textPersonName"
            android:backgroundTint="@color/gray"/>
    </LinearLayout>

    <!-- Wrapper Input Password -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <!-- Ikon Password -->
        <ImageView
            android:id="@+id/iconPassword"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/padlock"
            android:contentDescription="Ikon Password"
            android:layout_marginStart="10dp"
            android:tint="@color/black"/>

        <!-- Input Password -->
        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Password"
            android:padding="12dp"
            android:textSize="16sp"
            android:background="@null"
            android:inputType="textPassword"
            android:backgroundTint="@color/gray"/>
    </LinearLayout>

    <!-- Tombol Sign Up -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/orange"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

    <!-- Link ke Login -->
    <TextView
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah Punya Akun? Login"
        android:textSize="14sp"
        android:textColor="@color/orange"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>
</LinearLayout>
